{% extends 'produits/layout.html.twig' %}
{% block stylesheets %}
	<link href="https://bootswatch.com/5/journal/bootstrap.min.css" rel="stylesheet"/>
{% endblock %}
{% block body %}
	<h1 class="text-center">Bienvenue dans notre boutique !</h1>
	{% if produits|length > 0 %}
		<h2 class="text-center"> 
			Voici les produits de la catégorie {{categorie.libelle}} :
		</h2>
<div class="container">
    <div class="row align-items-start">
		{% for produit in produits %}
			<div class="col-md-4">
                <a class="link-underline link-underline-opacity-0" href="{% url 'produit_individuel' produit.id %}">
                    <div class="card border-dark mb-3" style="max-width: 22rem; max-height: 25rem;">
                    
                        <h4 class="card-header">{{ produit.libelle }}</h4>
                        <div class="card-body">
                            <div class="text-center">
                                <img style="width:15rem; height:15rem;" class="img-fluid rounded" src="{{ produit.photo }}">
                            </div>
                            <div class="text-end">
                                <h5 class="card-title">{{ produit.prix }}€</h5>
                                <p class="card-text">Catégorie : {{ produit.categorie }}</p>
                                <p class="card-text">Référence : {{ produit.reference }}</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
		{% endfor %}
		{% else %}
    <h2>Pas de produits dans cette catégorie !</h2>
	{% endif %}
	</div>
</div

{% endblock %}
