{% extends "produits/layout.html.twig" %}
{% block stylesheets %}
    <link href="https://bootswatch.com/5/journal/bootstrap.min.css" rel="stylesheet">
{% endblock %}
{% block body %}
<h1 class="text-center"> Bienvenue dans notre boutique ! </h1>
<h2 class="text-center"> Voici nos produits : </h2>
<div class="container">
    <div class="row align-items-start">
    {% for produit in produits %}
            <div class="col-md-4">
                <a href="{% url 'produit_individuel' produit.id %}">
                    <div class="card border-dark mb-3" style="max-width: 20rem;">
                    
                        <div class="card-header"><li>{{ produit.libelle }}</li></div>
                        <div class="card-body">
                            <h4 class="card-title">Dark card title</h4>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>
                </a>
            </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
